<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/train_score_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
       <ImageView
           android:id="@+id/iv"
           android:layout_width="87dp"
           android:layout_height="87dp"
           android:src="@mipmap/test_congra_img"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="20dp"
           />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:text="答题合格"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="90dp"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/tvRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:drawableLeft="@mipmap/test_right_icon"
                android:drawablePadding="10dp"
                android:text="答对78题"
                android:textSize="15sp"
                android:textColor="@color/color_blue"
                />
            <TextView
                android:id="@+id/tvWrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:drawableLeft="@mipmap/test_wrong_icon"
                android:drawablePadding="10dp"
                android:text="答错6题"
                android:textSize="15sp"
                android:textColor="@color/color_blue"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="关于管道安装，检修方面的知识还需要巩固。
再接再厉哦！"
            android:textSize="15sp"
            android:textColor="@color/color_blue"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="bottom"
        android:layout_margin="15dp"
        >

        <Button
            android:id="@+id/btnRedo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_bg_radius_4"
            android:gravity="center"
            android:text="重新答题"
            android:textColor="@color/color_white"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/blue_bg_radius_4"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/color_white"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>
