<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:background="@drawable/alpha_white_bg_radius_5"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:text="@string/application_name"
            android:textColor="#5571a1"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/gray_stroke_white_bg_4"
            android:drawableLeft="@mipmap/tel_icon"
            android:drawablePadding="17dp"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="number"
            android:paddingLeft="17dp"
            android:textColorHint="#a1c7d9"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/etPW"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gray_stroke_white_bg_4"
            android:drawableLeft="@mipmap/pw_icon"
            android:drawablePadding="17dp"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:paddingLeft="17dp"
            android:textColorHint="#a1c7d9"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/blue_bg_radius_4"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="忘记密码请联系系统管理员"
            android:textColor="@color/color_blue"
            android:textSize="12sp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@mipmap/logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:text="@string/application_name"
        android:textColor="#688999"
        android:textSize="11sp"
        />
</RelativeLayout>
