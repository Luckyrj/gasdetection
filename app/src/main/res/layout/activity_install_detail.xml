<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#7edbc4"
                android:drawableLeft="@mipmap/install_mission_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="基本信息"
                android:textColor="@color/color_white"
                android:textSize="15sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:padding="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:drawableLeft="@mipmap/install_num_icon"
                        android:drawablePadding="10dp"
                        android:text="单号"
                        android:textColor="@color/color_gray"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/tvNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="123"
                        android:textColor="@color/color_light_black"
                        android:textSize="13sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:drawableLeft="@mipmap/install_type_icon"
                        android:drawablePadding="10dp"
                        android:text="类型"
                        android:textColor="@color/color_gray"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="123"
                        android:textColor="@color/color_light_black"
                        android:textSize="13sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@mipmap/install_guest_icon"
                        android:drawablePadding="8dp"
                        android:text="客户姓名"
                        android:textColor="@color/color_gray"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="王萌萌"
                        android:textColor="@color/color_light_black"
                        android:textSize="13sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@mipmap/install_tel_icon"
                        android:drawablePadding="10dp"
                        android:text="联系电话"
                        android:textColor="@color/color_gray"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="phone"
                        android:drawablePadding="9dp"
                        android:drawableRight="@mipmap/check_dial_icon"
                        android:text="12345678901"
                        android:textColor="@color/color_blue"
                        android:textSize="13sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@mipmap/install_address_icon"
                        android:drawablePadding="10dp"
                        android:text="详细地址"
                        android:textColor="@color/color_gray"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="武汉市江岸区温馨小区10栋2单元
108室"
                        android:textColor="@color/color_light_black"
                        android:textSize="13sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@mipmap/install_hearter_icon"
                        android:drawablePadding="10dp"
                        android:text="安装器具"
                        android:textColor="@color/color_gray"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/tvItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="燃气灶"
                        android:textColor="@color/color_light_black"
                        android:textSize="13sp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_bg_radius_4"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/install_brand_icon"
                        android:drawablePadding="10dp"
                        android:text="品牌型号"
                        android:textColor="@color/color_gray"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/check_detail_icon"
                        android:text="请选择"
                        android:textColor="#c9c9c9"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_light_gray"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@mipmap/install_serialnum_icon"
                        android:drawablePadding="10dp"
                        android:text="产品序列号"
                        android:textColor="@color/color_gray"
                        android:textSize="13sp"
                        />

                    <EditText
                        android:id="@+id/etSerial"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请于此手动输入或扫码"
                        android:textColor="@color/color_light_black"
                        android:textSize="12sp"
                        />

                    <ImageView
                        android:id="@+id/ivScan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/install_scan_icon"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_pink"
                android:drawableLeft="@mipmap/install_upload_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="请上传安装前状态的照片（仅一张）"
                android:textColor="@color/color_white"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tvUpPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:drawableBottom="@mipmap/check_upphoto_icon"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="点击拍摄或上传照片"
                android:textColor="@color/color_gray"
                android:textSize="15sp"
                />

            <Button
                android:id="@+id/btnEnter"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_bg_radius_4"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/color_white"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
